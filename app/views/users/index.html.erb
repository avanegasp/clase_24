<h1>Users</h1>

<% if logged_in? %>
  <h1>Bienvenido  <%= current_user.name %>, ya estás logueado! </h1>
  <%= link_to 'Cerrar sesión', logout_path, method: :delete %>
<% else %>
  <h1>Debes loguearte en <%= link_to 'Logueate', login_path %></h1>
<% end %>


<% @users.each do |user| %>
  <li>Hey I am <%= user.name %> and you can see my password hash!</li>
  <li><%= user.password_digest %></li>
<% end %>
